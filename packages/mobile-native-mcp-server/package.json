{
  "name": "@salesforce/mobile-native-mcp-server",
  "version": "0.0.4",
  "type": "module",
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "description": "Salesforce Mobile Native MCP Server",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "magen-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc --build",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --max-warnings 0 --config ../../eslint.config.mjs \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/forcedotcom/mobile-mcp-tools.git"
  },
  "dependencies": {
    "@langchain/langgraph": "^0.4.9",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@salesforce/magen-mcp-workflow": "*",
    "dedent": "^1.7.1",
    "pino": "^9.9.5",
    "semver": "7.7.4",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.25.1"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.20.0",
    "@types/node": "^24.10.0",
    "@types/semver": "7.7.1",
    "@vitest/coverage-v8": "^3.2.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.3"
  }
}
