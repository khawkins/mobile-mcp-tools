{
  "name": "@salesforce/mcp-magi",
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist",
    "README.md"
  ],
  "description": "MCP Server for Magi PRD Generation Workflow",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "bin": {
    "mcp-magi": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint --max-warnings 0 --config ../../eslint.config.mjs \"src/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@salesforce/workflow-magi": "*",
    "@modelcontextprotocol/sdk": "^1.26.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.20.0",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.9.3",
    "vitest": "^3.2.3"
  }
}
